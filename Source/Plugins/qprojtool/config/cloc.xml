<externaltool id="cloc">
    <description>Code Counter with cloc</description>
    <displayname>cloc</displayname>
    <category>Code Counters</category>
    <executable output="showinpane" error="showinpane" modifiesdocument="no">
        <path>qpt</path>
        <arguments>-A  %{CurrentProject:FilePath} | xargs cloc --by-file</arguments>
        <workingdirectory> %{CurrentProject:Path}</workingdirectory>
    </executable>
</externaltool>
